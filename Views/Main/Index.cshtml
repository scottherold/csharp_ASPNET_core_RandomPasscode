<!-- Spot for model -->
@model string

<div class="row justify-content-center">
    <div class="col-lg-8 border border-dark rounded justify-content-center m-4 bg-light">
        <div class="col m-3">
            <h5 class="mb-3 text-center">Random Passcode (Passcode #@ViewBag.Counter)</h5>
            <div class="row justify-content-center mb-2">
                <div class="col-5 text-center p-2 border border-dark rounded bg-white mb-3">
                    <h3 class="text-center">@Model</h3>
                </div>
            </div>
            <div class="row justify-content-center mb-2">
                <a href="/" class="btn btn-primary text-center">Generate</a>
            </div>
        </div>
    </div>
</div>